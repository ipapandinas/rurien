---
import { ViewTransitions } from "astro:transitions";
import { FileText, Instagram, Mail } from "lucide-astro";
import Header from "@/components/base/Header.astro";
import { Button } from "@/components/ui/button";
import "@/styles/globals.css";

const META_TITLE = "Fuensanta R. Urien | Artist Painter";
const META_DESCRIPTION =
  "Fuensanta R. Urien es una artista Bilbaína cuyos cuadros han sido ampliamente expuestos por Francia y España.";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta property="description" content={META_DESCRIPTION} />
    <link rel="icon" href="/favicon/favicon.ico" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#fff" />
    <meta name="theme-color" content="#fff" />
    <meta
      property="og:image"
      content="https://fuensantarurien.com/avatar.jpeg"
    />
    <meta property="og:title" content={META_TITLE} />
    <meta property="og:description" content={META_DESCRIPTION} />
    <meta property="og:image:alt" content="Fuensanta R. Urien" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="200" />
    <meta property="og:image:height" content="200" />
    <meta property="twitter:title" content={META_TITLE} />
    <meta property="twitter:description" content={META_DESCRIPTION} />
    <meta property="og:url" content="https://fuensantarurien.com" />
    <meta
      name="twitter:image"
      content="https://fuensantarurien.com/avatar.jpeg"
    />
    <meta property="twitter:image:alt" content="Fuensanta R. Urien" />
    <meta name="twitter:image:type" content="image/png" />
    <meta name="twitter:image:width" content="200" />
    <meta name="twitter:image:height" content="200" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@dontelmo_" />
    <meta name="twitter:creator" content="@dontelmo_" />
    <title>{META_TITLE}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <main
      class="flex flex-col items-center min-h-screen max-w-5xl mx-auto px-8 mt-8 mb-32"
    >
      <div class="text-center mb-16">
        <div class="flex justify-center relative select-none">
          <img
            class="rounded-full overflow-hidden"
            alt="Avatar"
            src="/avatar.jpeg"
            width="200px"
            height="200px"
          />
        </div>
        <h1 class="text-xl font-bold leading-none mt-4">Fuensanta R. Urien</h1>
        <h2 class="text-lg text-muted-foreground">Artist Painter</h2>
        <div class="flex flex-col">
          <a
            href="https://www.instagram.com/fuentxu"
            title="Contacto Instagram"
            target="_blank"
            rel="noopener"
          >
            <Button className="mt-4 w-40">
              <Instagram className="mr-2 h-4 w-4" /> Instagram
            </Button>
          </a>
          <a href="mailto:fuentxu64@gmail.com" title="Contacto Email">
            <Button className="mt-4 w-40">
              <Mail className="mr-2 h-4 w-4" /> Email
            </Button>
          </a>
          <a
            href="/portfolio.pdf"
            title="Official Instagram"
            target="_blank"
            rel="noopener"
          >
            <Button className="mt-4 w-40">
              <FileText className="mr-2 h-4 w-4" /> Portfolio PDF
            </Button>
          </a>
        </div>
      </div>
      <slot />
    </main>
  </body>
</html>
